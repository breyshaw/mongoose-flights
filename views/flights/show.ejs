<%- include('../partials/html-head.ejs') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav.ejs') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>FlightNo: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
  </section>
<!-- </main> -->

<h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
  <label for="seat-input">Seat:</label>
  <input name="seat" required pattern="[A-F][1-9]\d?">
  <label for="price-input">Price:</label>
  <input name="price">
    <button type="submit">Add Ticket</button>
</form>

<h2>Tickets:</h2>
<% flight.tickets.forEach(function(ticket) { %>
    <h3>Ticket created at: <%= ticket.createdAt.toLocaleDateString() %></h3>
      <h3>Seat:<%= ticket.seat %></h3>
        <h3>Price:<%= ticket.price %></h3>
        <% }) %>

  <!-- <h2>Destinations:</h2> -->
 
  <div>Destinations</div>
  <ul>
    <%- flight.destination.map(d => 
      `<li>${d.airport}</li>`
    ).join('') %>
  </ul>
  <% // end cast list %>
</section>


</section>
  
  <form id="add-des-to-flight" action="/flights/<%= flight._id %>/destinations" method="POST">
    <select name="destinationId">
      <%- destinations.map(d => 
        `<option value="${d._id}">${d.airport}</option>`
      ).join('') %>
    </select>
    <button type="submit">Add to Flight</button>
  </form>
  

  </main>
  
<%- include('../partials/footer.ejs') %>