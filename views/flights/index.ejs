<%- include('../partials/html-head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/flights/index.css" />
    <%- include('../partials/nav.ejs') %>

        <main>
            <h1>
                <%= title %>
            </h1>
            <table id="list">
                <thead>
                    <tr>
                        <th>Airline</th>
                        <th>Airport</th>
                        <th>FlightNo.</th>
                        <th>Departs</th>
                        <th></th>
                    </tr>
                </thead>
                <% flights.forEach(function(f) { %>
                    <tr>
                        <td>
                            <%= f.airline %>
                        </td>
                        <td>
                            <%= f.airport %>
                        </td>
                        <td>
                            <%= f.flightNo %>
                        </td>
                        <td>
                            <%= f.departs %>
                        </td>
                        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                    </tr>
                    <% }); %>
                        </tbody>
            </table>
        </main>

        <%- include('../partials/footer') %>