<%- include('../partials/nav') %>

        <main>
            <h1>
                <%= title %>
            </h1>
            <form id="new-form" action="/flights" method="POST">

                <label>Airline</label>
                <input type="text" name="airline">
                <br>



                <label>Airport</label>
                    <input type="text" name="airport">
                <br>

                <label>FlightNo:</label>
                    <input type="number" name="flightNo">
                <br>

                <label>Departs:</label>
                    <input type="datetime-local" name="departs">
                <br>

                <button type="submit">Add Flight</button>
            </form>
        </main>

